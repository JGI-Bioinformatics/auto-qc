#!/usr/bin/env python

import sys,os.path
root = os.path.join(os.path.dirname(__file__), '..')
sys.path.append(root)

from auto_qc.util.misc import virtual_env
virtual_env(root)

import argparse


# Write a description of your project here
parser = argparse.ArgumentParser(description='DESCRIPTION HERE')


# An example of passing arguments to this command
parser.add_argument('--library_file',     # This will be long name of the arg
                    '-l',                 # This is the one character short-cut
                    dest='library',       # The value will be placed in 'args' with this key
                    required=True)        # Is this argument required or not

# Collect the arguments into a dictionary
args = vars(parser.parse_args())


# Here the code is imported
#
#     directory           file        method
#    -------------------- ----        ---
from auto_qc.main import run

# Call the imported method with the argument hash
run(args)
