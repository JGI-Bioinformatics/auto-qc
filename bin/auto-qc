#!/usr/bin/env python

import sys,os.path
root = os.path.join(os.path.dirname(__file__), '..')
sys.path.append(root)

from auto_qc.util.misc import virtual_env
virtual_env(root)

import argparse
parser = argparse.ArgumentParser(
           description='Calculates if sample passes based on QC thresholds')
parser.add_argument('--analysis_file',  '-a', dest='analysis_file',  required=True)
parser.add_argument('--threshold_file', '-t', dest='threshold_file', required=True)

group = parser.add_mutually_exclusive_group(required=False)
group.add_argument('--yaml-output', '-y', dest='yaml', action='store_true')
group.add_argument('--text-output', '-x', dest='text', action='store_true')

args = vars(parser.parse_args())

from auto_qc.main import run
run(args)
