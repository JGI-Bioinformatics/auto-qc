#!/usr/bin/env python

import sys,os.path
root = os.path.join(os.path.dirname(__file__), '..')
sys.path.append(root)

from auto_qc.util.misc import virtual_env
virtual_env(root)

import argparse
parser = argparse.ArgumentParser(
           description='Generates auto-qc evaluation output YAML file.')
parser.add_argument('--analysis-file',  '-a', dest='analysis_file',  required=True)
parser.add_argument('--threshold-file', '-t', dest='threshold_file', required=True)

args = vars(parser.parse_args())

from auto_qc.evaluate.main import run
run(args)
